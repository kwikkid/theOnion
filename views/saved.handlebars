<div class="container-fluid">
    <div id="articles-saved">
        {{#each db_articles}}
          {{#if this.saved}}
          <div class="row">
              <div class="col-10">
                <h3>
                    <pre>{{this.title}}</pre>
                </h3>
                <pre>{{this.link}}</pre>
              </div>
              <div class="col-2">
                <button type="button" class="btn btn-success" data-id={{_id}}>Save Article</button>
              </div>
          </div>
                {{/if}}
                  {{/each}}
              
      </div>


</div>
